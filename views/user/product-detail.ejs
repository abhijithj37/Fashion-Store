<script>



 
 
var ratings = document.querySelectorAll(".ratings");
 // Loop through each rating element
ratings.forEach(function(rating) {
  // Get the rating value from the data attribute
  var ratingValue = rating.getAttribute("data-rating");

  // Calculate the width based on the rating value (5 stars = 100%)
  var width = ratingValue / 5 * 100;

  // Set the width of the ratings-val element
  rating.querySelector(".ratings-val").style.width = width + "%";
});

    
    function addToCart(proId,stock){

$.ajax({
   url:'/check-cart-quantity/'+proId,
   method:'get',
   success:(response)=>{
    if(response.status){
        if(stock-response.quantity<=0){
            toastOutOfStock()
            
        }else{
            $.ajax({
                url:'/add-to-cart/'+proId,
                method:'get',
                success:(response)=>{
                    if(response.status){
                        let count=$('#cart-count').html()
                        count=parseInt(count)+1
                        $('#cart-count').html(count)
                        toast()
                    }
                }
            })
        }
    }else{
            $.ajax({
                url:'/add-to-cart/'+proId,
                method:'get',
                success:(response)=>{
                    if(response.status){
                        let count=$('#cart-count').html()
                        count=parseInt(count)+1
                        $('#cart-count').html(count)
                        toast()
                    }
                }
            })
        }
   } 
})
    }


    const dateInput = document.getElementById('review-date');
const now = new Date();
const year = now.getFullYear();
const month = now.getMonth() + 1; // January is 0
const day = now.getDate();
dateInput.value = `${year}-${month.toString().padStart(2, '0')}-${day.toString().padStart(2, '0')}`;




    $("#review-form").submit((e)=>{
    e.preventDefault()
    $.ajax({
        url:'/post-review',
        method:'post',
        data:$("#review-form").serialize(),
        success:(response)=>{
             if(response.status){
                Swal.fire({
            icon: 'success',
            title:'review Posted',
            })
             location.reload(); 

              

        }
             
                
         

             
        }


    })
})

function noPurchase(){
    Swal.fire({
            icon: 'error',
            title:'Haven t purchased this product',
            text:'Sorry! You are not allowed to review this product since you havent bought it '
            })
}
</script>